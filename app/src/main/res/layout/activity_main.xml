<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/background" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="82dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="-687dp"
        android:background="@drawable/triangle"
        android:onClick="diamonds"
        android:text="@string/gold1"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="DuplicateSpeakableTextCheck" />


    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="98dp"
        android:layout_marginStart="-200dp"
        android:layout_marginBottom="-350dp"
        android:background="@drawable/triangle"
        android:onClick="gold"
        android:text="@string/gold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="98dp"
        android:layout_marginStart="-400dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/triangle"
        android:text="@string/silver"
        android:onClick="silver"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/imageView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="98dp"
        android:layout_marginStart="-200dp"
        android:layout_marginBottom="-500dp"
        android:background="@drawable/triangle"
        android:text="@string/Iron"
        android:textColor="@color/white"
        android:onClick="iron"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="98dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="-356dp"
        android:background="@drawable/triangle"
        android:text="@string/Coal"
        android:onClick="coat"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>